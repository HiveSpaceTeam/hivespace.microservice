{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "UserServiceDb": "Server=localhost,1433;Database=UserDb;User Id=sa;Encrypt=False;TrustServerCertificate=True"
  },
  "Clients": {
    "webapp": {
      "ClientId": "webapp",
      "ClientName": "WebApp Client",
      "ClientUri": "http://localhost:5173",
      "RequireClientSecret": false,
      "AllowedGrantTypes": [ "authorization_code" ],
      "AllowAccessTokensViaBrowser": false,
      "RequireConsent": false,
      "AllowOfflineAccess": true,
      "AlwaysIncludeUserClaimsInIdToken": true,
      "RequirePkce": false,
      "RedirectUris": [
        "http://localhost:5173/callback",
        "http://localhost:5173/callback.html",
        "http://localhost:5173/silent-renew.html"
      ],
      "PostLogoutRedirectUris": [
        "http://localhost:5173/"
      ],
      "AllowedCorsOrigins": [
        "http://localhost:5173"
      ],
      "AllowedScopes": [
        "openid",
        "profile",
        "offline_access",
        "hivespace-backend.fullaccess",
        "user.fullaccess"
      ],
      "AccessTokenLifetime": 7200,
      "IdentityTokenLifetime": 7200
    },
    "apitestingapp": {
      "ClientId": "apitestingapp",
      "ClientName": "API Testing Client",
      "RequireClientSecret": true,
      "AllowedGrantTypes": [ "client_credentials" ],
      "ClientSecret": "apitestingsecret",
      "AllowedScopes": [
        "user.fullaccess"
      ],
      "AlwaysIncludeUserClaimsInIdToken": true
    }
  },
  "Authentication": {
    "Google": {
      "ClientId": "",
      "ClientSecret": ""
    }
  },
  "Duende": {
    "LicenseKey": ""
  },
  "MediatR": {
    "LicenseKey": ""
  }
}
