{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/identity"
          }
        ]
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/v{version}/users/{**catch-all}"
        }
      },
      "account-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/v{version}/accounts/{**catch-all}"
        }
      },
      "admin-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/v{version}/admins/{**catch-all}"
        }
      },
      "store-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/v{version}/stores/{**catch-all}"
        }
      },
      "categories-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/v{version}/categories/{**catch-all}"
        }
      },
      "products-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/v{version}/products/{**catch-all}"
        }
      },
      "media-route": {
        "ClusterId": "media-cluster",
        "Match": {
          "Path": "/api/v{version}/media/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "user-cluster": {
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5001"
          }
        }
      },
      "catalog-cluster": {
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5002"
          }
        }
      },
      "media-cluster": {
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5003"
          }
        }
      }
    }
  }
}